<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivIcono"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvToastTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvToastTitle"
        app:layout_constraintStart_toEndOf="@+id/ivIcono"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvToastDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvDescription"
        app:layout_constraintStart_toEndOf="@+id/ivIcono"
        app:layout_constraintTop_toBottomOf="@+id/tvToastTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>